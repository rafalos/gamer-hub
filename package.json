{
  "name": "gamer-hub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently 'next dev --turbopack' 'npm run dev:worker'",
    "build": "next build && npm run db:migrate && npm run seed",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "db:migrate": "npx drizzle-kit migrate",
    "db:generate": "npx drizzle-kit generate",
    "seed": "ts-node -r tsconfig-paths/register jobs/seedDb.ts",
    "dev:worker": "ts-node -r tsconfig-paths/register workers/rawg_game_worker.ts",
    "start:worker": "npx tsup && node dist/workers/rawg_game_worker.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.55.0",
    "axios": "^1.11.0",
    "better-auth": "^1.3.7",
    "bullmq": "^5.58.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "express": "^5.1.0",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "redis": "^5.8.2",
    "tailwind-merge": "^3.3.1",
    "tsconfig-paths": "^4.2.0",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^5.0.3",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jsdom": "^26.1.0",
    "openapi-typescript": "^7.9.1",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.4",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
